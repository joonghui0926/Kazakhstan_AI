import time
from maix import GPIO
from fpioa_manager import fm
from board import board_info

fm.register(21, fm.fpioa.GPIO0, force=True)
fm.register(18, fm.fpioa.GPIO1, force=True)
fm.register(20, fm.fpioa.GPIO2, force=True)

led_r = GPIO(GPIO.GPIO0, GPIO.OUT)
led_g = GPIO(GPIO.GPIO1, GPIO.OUT)
led_b = GPIO(GPIO.GPIO2, GPIO.OUT)

while True:
    //
    # Turn on the red LED and turn off the green and blue LEDs #
    print("red")
    time.sleep(1.0)
    

    //
    # Turn on the green LED and turn off the red and blue LEDs #
    print("green")
    time.sleep(1.0)


    //
    # Turn on the blue LED and turn off the red and green LEDs #
    print("blue")
    time.sleep(1.0)
